{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "properties": {
    "login": {
      "$ref": "#/definitions/login_not_empty"
    },
    "pass": {
      "$ref": "#/definitions/pass_not_empty"
    },
    "source": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9_\\-@\\.]+$"
    }
  },
  "definitions": {
    "login_not_empty": {
      "type": "string",
      "pattern": "^[^\\s]+$",
      "maxLength": 100
    },
    "pass_not_empty": {
      "type": "string",
      "maxLength": 100
    }
  },
  "required": [
    "login",
    "pass"
  ]
}
